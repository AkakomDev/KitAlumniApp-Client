<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.kit.isco.kitalumniapp.settings.ImpressumActivity" >

        <ImageView
            android:background="@color/background_material_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/kitLogo"
            android:src="@drawable/kit_logo"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TitleImpressum"
            android:padding="20dp"
            android:gravity="center_horizontal"
            android:text="@string/impressum"
            android:textSize="20sp"
            android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/providerTitle"
        android:padding="20dp"
        android:gravity="center_horizontal"
        android:text="@string/impressum_provider_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@id/kitLogo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/providerText"
        android:text="@string/impressum_provider_text"
        android:textSize="15sp"
        android:layout_below="@id/providerTitle"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/officeTitle"
        android:padding="20dp"
        android:gravity="center_horizontal"
        android:text="@string/impressum_office_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@id/providerText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/officeText"
        android:text="@string/impressum_office_text"
        android:textSize="15sp"
        android:layout_below="@id/officeTitle"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contactTitle"
        android:padding="20dp"
        android:gravity="center_horizontal"
        android:text="@string/impressum_contact_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@id/officeText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contactText"
        android:text="@string/impressum_contact_text"
        android:textSize="15sp"
        android:layout_below="@id/contactTitle"/>



</RelativeLayout>
