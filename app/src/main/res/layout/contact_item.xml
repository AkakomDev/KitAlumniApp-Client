<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="4dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/contactImage"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/default_news_image"/>

    <LinearLayout
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content">


        <TextView
            style="@android:style/TextAppearance.Medium"
            android:id="@+id/contactName"
            android:layout_width="fill_parent"
            android:text="Max Muster"
            android:layout_height="wrap_content"
            />


        <TextView
            android:id="@+id/contactShortDescription"
            style="@android:style/TextAppearance.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Proin scelerisque ante eget metus egestas, aliquam molestie justo lobortis."/>

        <TextView
            style="@android:style/TextAppearance.Medium"
            android:id="@+id/contactPhone"
            android:layout_width="fill_parent"
            android:text="Contact PhoneNumber"
            android:layout_height="wrap_content"
            />
        <TextView
            style="@android:style/TextAppearance.Medium"
            android:id="@+id/contactMail"
            android:layout_width="fill_parent"
            android:text="Contact MailAddress"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

</LinearLayout>